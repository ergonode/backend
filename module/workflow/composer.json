{
    "name": "ergonode/workflow",
    "type": "ergonode-module",
    "description": "Ergonode - Workflow",
    "homepage": "https://ergonode.com",
    "license": "OSL-3.0",
    "config": {
        "bin-dir": "bin",
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "require": {
        "php": "^7.2",
        "doctrine/dbal": "^2.9",
        "ergonode/api": "^0.6.0",
        "ergonode/core": "^0.6.0",
        "ergonode/condition": "^0.6.0",
        "ergonode/es": "^0.6.0",
        "ergonode/grid": "^0.6.0",
        "jms/serializer": "^3.1",
        "ramsey/uuid": "^3.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^7"
    },
    "autoload": {
        "psr-4": {
            "Ergonode\\Workflow\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ergonode\\Workflow\\Tests\\": "tests/"
        }
    }
}
