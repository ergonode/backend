{
    "name": "ergonode/product-collection",
    "type": "ergonode-module",
    "description": "Ergonode - Product Collection",
    "homepage": "https://ergonode.com",
    "license": "OSL-3.0",
    "config": {
        "bin-dir": "bin",
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "require": {
        "php": "^7.4",
        "ergonode/api": "^1.0.0-beta",
        "ergonode/product": "^1.0.0-beta",
        "ergonode/core": "^1.0.0-beta",
        "ergonode/es": "^1.0.0-beta",
        "ergonode/segment": "^1.0.0-beta",
        "ergonode/shared-kernel": "^1.0.0-beta"
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "autoload": {
        "psr-4": {
            "Ergonode\\ProductCollection\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ergonode\\ProductCollection\\Tests\\": "tests/"
        }
    }
}
