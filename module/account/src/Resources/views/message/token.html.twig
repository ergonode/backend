{% trans_default_domain 'mailer' %}

{% extends "@ErgonodeMailer/layout/default.html.twig" %}

{% block content %}
    <table width="600px" border="0" cellspacing="0" cellpadding="0" align="center" bgcolor="#fff"
           style="background-color=#fff; margin-top:40px; margin-bottom:40px; padding:40px;">
        <tr style="background-color:#fff; color:#33373E;">
            <td align="center" style="text-align: justify;">
                <p style="margin-top:16px;">
                    {{ 'Hello'|trans }}, {{ firstName }}
                </p>
            </td>
        </tr>

        <tr style="background-color:#fff; color:#33373E;">
            <td align="center" style="text-align: justify;">
                <p style="margin-top:16px;">
                    {{ 'It looks like you want to reset your Ergonode password. No problem! Who has never forgotten his/her password, right?' |trans }}
                </p>
            </td>
        </tr>
        <tr style="background-color:#fff; color:#33373E;">
            <td align="center" style="text-align: justify;">
                <p style="margin-top:16px;">
                    {{ 'Click the button below and follow the instructions to reset your password.' |trans }}
                </p>
            </td>
        </tr>
        <tr style="background-color:#fff; color:#33373E;">
            <td align="center" style="text-align: justify;">
                <a href="{{ url }}{{ token }}" target="_blank">
                    <button style="margin-top:24px;">{{ 'Reset password'|trans }}</button>
                </a>
            </td>
        </tr>
        <tr style="background-color:#fff; color:#33373E;">
            <td align="center" style="text-align: justify;">
                <p style="margin-top:16px;">
                    {{ 'If you havenâ€™t requested a password change and this message is unexpected - just ignore it.'|trans }}
                </p>
            </td>
        </tr>
        <tr style="background-color:#fff; color:#33373E;">
            <td align="center" style="text-align: justify;">
                <p style="margin-top:16px;">
                    {{ 'Cheers'|trans  }},
                </p>
            </td>
        </tr>
        <tr style="background-color:#fff; color:#33373E;">
            <td align="center" style="text-align: justify;">
                <p style="margin-top:16px;">
                    {{ 'Team Ergonode'|trans }}
                </p>
            </td>
        </tr>
    </table>
{% endblock %}
