{
    "name": "ergonode/api",
    "type": "ergonode-module",
    "description": "Ergonode - API",
    "homepage": "https://ergonode.com",
    "license": "OSL-3.0",
    "config": {
        "bin-dir": "bin",
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "require": {
        "php": "^7.4",
        "doctrine/dbal": "^2.13",
        "ergonode/core": "^1.1.0",
        "ergonode/shared-kernel": "^1.1.0",
        "nelmio/api-doc-bundle": "^3.6",
        "nelmio/cors-bundle": "^2.0",
        "ramsey/uuid": "^3.8",
        "sensio/framework-extra-bundle": "^5.5",
        "symfony/http-foundation": "^4.4",
        "symfony/validator": "^4.4.11"
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "autoload": {
        "psr-4": {
            "Ergonode\\Api\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ergonode\\Api\\Tests\\": "tests/"
        }
    }
}
