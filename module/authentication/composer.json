{
    "name": "ergonode/authentication",
    "type": "ergonode-module",
    "description": "Ergonode - Authentication",
    "homepage": "https://ergonode.com",
    "license": "OSL-3.0",
    "config": {
        "bin-dir": "bin",
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "require": {
        "php": "^7.4",
        "doctrine/dbal": "^2.13",
        "ergonode/account": "^1.3.0",
        "ergonode/core": "^1.3.0",
        "ergonode/shared-kernel": "^1.3.0",
        "gesdinet/jwt-refresh-token-bundle": "^0.11.1|^0.12",
        "lexik/jwt-authentication-bundle": "^2.6",
        "nelmio/api-doc-bundle": "^3.6",
        "ramsey/uuid": "^3.8",
        "sensio/framework-extra-bundle": "^5.5",
        "symfony/form": "^4.4.11|^5.3",
        "symfony/messenger": "^4.4|^5.3",
        "symfony/translation": "^4.4|^5.3",
        "symfony/validator": "^4.4.11|^5.3",
        "vich/uploader-bundle": "^1.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "conflict": {
        "doctrine/persistence": "<1.3"
    },
    "autoload": {
        "psr-4": {
            "Ergonode\\Authentication\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ergonode\\Authentication\\Tests\\": "tests/"
        }
    }
}
