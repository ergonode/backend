{
    "name": "ergonode/core",
    "type": "ergonode-module",
    "description": "Ergonode - Core",
    "homepage": "https://ergonode.com",
    "license": "OSL-3.0",
    "config": {
        "bin-dir": "bin",
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "require": {
        "php": "^7.4",
        "doctrine/annotations": "^1.8",
        "doctrine/dbal": "^2.13",
        "ergonode/api": "^1.2.0",
        "ergonode/grid": "^1.2.0",
        "ergonode/migration": "^1.2.0",
        "ergonode/shared-kernel": "^1.2.0",
        "league/flysystem": ">1.0.54",
        "limenius/liform-bundle": "^0.17.0",
        "nelmio/api-doc-bundle": "^3.6",
        "ramsey/uuid": "^3.8",
        "sensio/framework-extra-bundle": "^5.5",
        "symfony/form": "^4.4.11|^5.3",
        "symfony/messenger": "^4.4|^5.3",
        "symfony/polyfill-php80": "^1.22",
        "symfony/serializer": "^4.4|^5.3",
        "symfony/translation": "^4.4|^5.3"
    },
    "require-dev": {
        "behat/behat": "^3.6",
        "behatch/contexts": "^3.3",
        "phpunit/phpunit": "^9"
    },
    "suggest": {
        "behatch/contexts": "For using provided behat contexts"
    },
    "autoload": {
        "psr-4": {
            "Ergonode\\Core\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ergonode\\Core\\Tests\\": "tests/"
        }
    }
}
