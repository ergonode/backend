{
    "name": "ergonode/mailer",
    "type": "ergonode-module",
    "description": "Ergonode - Mailer",
    "homepage": "https://ergonode.com",
    "license": "OSL-3.0",
    "config": {
        "bin-dir": "bin",
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "require": {
        "php": "^7.4",
        "doctrine/dbal": "^2.13",
        "ergonode/core": "^1.2.0",
        "ergonode/shared-kernel": "^1.2.0",
        "nelmio/api-doc-bundle": "^3.6",
        "nelmio/cors-bundle": "^2.0",
        "ramsey/collection": "^1.1",
        "ramsey/uuid": "^3.8",
        "sensio/framework-extra-bundle": "^5.5",
        "symfony/http-foundation": "^4.4|^5.3",
        "symfony/mailer": "^4.4|^5.3",
        "symfony/twig-bridge": "^4.4|^5.3",
        "symfony/validator": "^4.4.11|^5.3",
        "twig/twig": "^3.0",
        "webmozart/assert": "^1.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "autoload": {
        "psr-4": {
            "Ergonode\\Mailer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ergonode\\Mailer\\Tests\\": "tests/"
        }
    }
}
