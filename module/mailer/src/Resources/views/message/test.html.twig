{% trans_default_domain 'mailer' %}

{% extends "@ErgonodeMailer/layout/default.html.twig" %}

{% block content %}
<table width="600px" border="0" cellspacing="0" cellpadding="0" align="center" bgcolor="#fff" style="background-color=#fff; margin-top:40px; margin-bottom:40px; padding:40px;">
    <tr style="background-color:#fff; color:#33373E;">
        <td>
            <h1>{{ 'Welcome in Ergonode'|trans }}</h1>
        </td>
    </tr>
    <tr style="background-color:#fff; color:#33373E;">
        <td align="center" style="text-align: justify;">
            <p style="margin-top:16px;">{{ 'This is a test message'|trans }}</p>
            <p style="margin-top:16px;">{{ 'Message was sent'|trans }} {{ date|date('Y-m-d H:i:s') }}</p>
        </td>
    </tr>
</table>
{% endblock %}